{
  "name": "host",
  "version": "1.0.0",
  "scripts": {
    "start": "npm-run-all --parallel start:host start:home start:garage start:ui start:template",
    "start:host": "cross-env PORT=8080 MFE_HOME_PORT=3001 MFE_GARAGE_PORT=3002 SHARED_UI_PORT=3003 webpack serve --mode development",
    "start:home": "npm start --prefix packages/mfe-home",
    "start:garage": "npm start --prefix packages/mfe-garage",
    "start:ui": "npm start --prefix packages/shared-ui",
    "start:template": "npm start --prefix packages/mfe-template",
    "build": "npm-run-all --serial build:*",
    "build:host": "webpack --mode production",
    "build:home": "npm run build --prefix packages/mfe-home",
    "build:garage": "npm run build --prefix packages/mfe-garage",
    "build:ui": "npm run build --prefix packages/shared-ui",
    "build:template": "npm run build --prefix packages/mfe-template",
    "build:dev": "webpack --mode development"
  },
  "license": "MIT",
  "devDependencies": {
    "@21st-extension/react": "^0.5.14",
    "@21st-extension/toolbar-react": "^0.5.14",
    "@babel/core": "^7.15.8",
    "@babel/plugin-transform-runtime": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.1.0",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.3.0",
    "html-webpack-plugin": "^5.3.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.1",
    "postcss-loader": "^4.1.0",
    "style-loader": "^3.3.0",
    "tailwindcss": "^2.0.2",
    "typescript": "^4.4.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.9",
    "lucide-react": "^0.525.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "tailwind-merge": "^3.3.1"
  }
}
