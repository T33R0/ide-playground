{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "shared_ui/*": [
        "../packages/shared-ui/src/components/ui/*"
      ],
      "shared_ui/context/*": [
        "../packages/shared-ui/src/context/*"
      ],
      "shared_ui/lib/*": [
        "../packages/shared-ui/src/lib/*"
      ]
    }
  },
  "include": [
    "src"
  ]
} 